<% content_for :title do %>
  BnB Manager | La conciergerie Airbnb complète et sur-mesure
<% end %>

<section id="slider" class="slider-element slider-parallax" style="background: url('/assets/landing/home.jpg') no-repeat; background-size: cover" data-height-xl="700" data-height-lg="600" data-height-md="400" data-height-sm="300" data-height-xs="250">
  <div class="slider-parallax-inner">

    <div class="container clearfix">
      <div class="vertical-middle dark center">

        <div class="heading-block nobottommargin center">
          <h1>
            <span class="text-rotater nocolor" data-separator="|" data-rotate="flipInX" data-speed="3500">
              Grâce à BnB Manager <span class="t-rotate">Gagnez de l'argent|Partez l'esprit tranquille|Economisez</span>
            </span>
          </h1>
          <span class="d-none d-md-block">On paye votre <strong>loyer</strong> pendant vos absences</span>
        </div>
        <a href="users/sign_up" class="button button-border button-light button-rounded button-reveal tright button-large topmargin d-none d-md-inline-block"><i class="icon-angle-right"></i><span>Estimer mes revenus</span></a>

      </div>
    </div>
  </div>
</section>

<section id="content">
  <div class="container clearfix">
    <div id="oc-clients" class="owl-carousel image-carousel carousel-widget" data-margin="20" data-nav="false" data-pagi="true" data-items-xs="2" data-items-sm="3" data-items-md="4" data-items-lg="5" data-items-xl="6">
      <div class="oc-item"><a href="#"><%= image_tag 'clients/logo/1.png', alt: 'Clients' %></a></div>
      <div class="oc-item"><a href="#"><%= image_tag 'clients/logo/2.png', alt: 'Clients' %></a></div>
      <div class="oc-item"><a href="#"><%= image_tag 'clients/logo/3.png', alt: 'Clients' %></a></div>
      <div class="oc-item"><a href="#"><%= image_tag 'clients/logo/4.png', alt: 'Clients' %></a></div>
      <div class="oc-item"><a href="#"><%= image_tag 'clients/logo/5.png', alt: 'Clients' %></a></div>
      <div class="oc-item"><a href="#"><%= image_tag 'clients/logo/6.png', alt: 'Clients' %></a></div>
      <div class="oc-item"><a href="#"><%= image_tag 'clients/logo/7.png', alt: 'Clients' %></a></div>
      <div class="oc-item"><a href="#"><%= image_tag 'clients/logo/8.png', alt: 'Clients' %></a></div>
      <div class="oc-item"><a href="#"><%= image_tag 'clients/logo/9.png', alt: 'Clients' %></a></div>
      <div class="oc-item"><a href="#"><%= image_tag 'clients/logo/10.png', alt: 'Clients' %></a></div>
    </div>
  </div>
</section>

