<h1>Modifier mes informations</h1>

<%= form_for @property do |form| %>

<div class="field">
    <%= form.label 'Adresse' %>
    <%= form.text_field :additional_content, placeholder: "Entrez votre adresse", id: :autocomplete_address %>
  </div>

  <div class="field">
    <%= form.label 'N° de voie' %>
    <%= form.number_field :street_number, id: :street_number %>
  </div>

  <div class="field">
    <%= form.label 'Nom de la voie' %>
    <%= form.text_field :route, id: :route %>
  </div>

  <div class="field">
    <%= form.label 'Ville' %>
    <%= form.text_field :locality, id: :locality %>
  </div>

  <div class="field">
    <%= form.label 'Région' %>
    <%= form.text_field :administrative_area_level_1, id: :administrative_area_level_1 %>
  </div>

  <div class="field">
    <%= form.label 'Code postal' %>
    <%= form.number_field :postal_code, id: :postal_code %>
  </div>

  <div class="field">
    <%= form.label 'Pays' %>
    <%= form.text_field :country, id: :country %>
  </div>

    <%= form.hidden_field :user_id, value: current_user.id %>

    <%= form.submit "Modifier" %>
<%end%>

<%= link_to 'Retour', property_index_path %>

    <script type="text/javascript"
            src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=<%=Rails.application.credentials.GOOGLE_API_KEY%>"></script>
