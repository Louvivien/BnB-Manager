<div class="modal1 mfp-hide" id="modal-register">
  <div class="card divcenter" style="max-width: 540px;">
    <div class="card-header py-3 nobg center">
      <h3 class="mb-0 t400 text-center center">Hello, bienvenue parmi nous</h3>
    </div>
    <div class="card-body divcenter py-5" style="max-width: 70%;">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: 'login-form', class: 'nobottommargin row' }) do |f| %>

				<div class="col-12">
					<%= f.email_field :email, required: false, class:"form-control not-dark", id: 'login-form-username', placeholder: 'Email' %>
				</div>

				<div class="col-12 mt-4">
				  <%= f.password_field :password, required: false, class:"form-control not-dark", id: 'login-form-username', placeholder: 'Mot de passe' %>
				</div>

        <div class="col-12">
          <a href="#" class="fright text-dark t300 mt-2">Mot de passe oubli√© ?</a>
        </div>

        <div class="col-12 mt-4">
					<%= f.submit "Se connecter", class: "button btn-block nomargin", id: "login-form-submit"  %>
        </div>

      <% end %>
    </div>
    <div class="card-footer py-4 center">
      <p class="mb-0">Pas encore de compte chez nous ? <a href="users/sign_up"><u>S'enregistrer</u></a></p>
    </div>
  </div>
</div>
